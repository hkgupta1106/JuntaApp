<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#80000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Medium.ttf</item>
    </style>
    <!--Custom bold text appearance-->
    <style name="CustomTextAppearance.Bold" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Custom light text appearance-->
    <style name="CustomTextAppearance.Light" parent="CustomTextAppearance">
        <item name="fontPath">fonts/Dosis-Light.ttf</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector_primary_color</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OTPStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">22dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="otpEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:digits">0123456789</item>'
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>

<style name="profile1TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">2dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
    <item name="android:background">#ececec</item>
    <item name="android:layout_marginEnd">5dp</item>
</style>

    <style name="profile1Text">
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:drawableEnd">@drawable/height_dropdown</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>